<UserControl x:Class="NameConvention.MenuUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NameConvention"
             mc:Ignorable="d" 
             d:DesignHeight="26" d:DesignWidth="800">
    <UserControl.Resources>
        <Style TargetType="MenuItem">
            <Setter Property="FontSize" Value="16"/>
        </Style>
    </UserControl.Resources>
    <Grid>
        <DockPanel>
            <Menu DockPanel.Dock="Top" Background="Gainsboro" Padding="2">
                <MenuItem Header="Файл">
                    <MenuItem Header="_Підключитися до бази даних"/>
                    <Separator />
                    <MenuItem Header="_Закрити" Click="MenuItem_Click"/>
                </MenuItem>
                <MenuItem Header="_Шаблони">
                    <MenuItem Header="_Додати новий шаблон"/>
                    <MenuItem Header="_Переглянути шаблони"/>
                </MenuItem>
                <MenuItem Header="_?">
                    <MenuItem Header="_Довідка"/>
                    <Separator />
                    <MenuItem Header="_Автори"/>
                </MenuItem>
            </Menu>
        </DockPanel>
    </Grid>
</UserControl>
