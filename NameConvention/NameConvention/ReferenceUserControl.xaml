<UserControl x:Class="NameConvention.ReferenceUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NameConvention"
             mc:Ignorable="d" 
             d:DesignHeight="Auto" d:DesignWidth="800">
    <Grid>
        <Label FontSize="20" x:Name="labelName" Margin="0,0,0,-310">Довідка</Label>
        <RichTextBox x:Name="richTextBox" HorizontalAlignment="Left" Height="Auto" Margin="0,40,0,-157" VerticalAlignment="Top" 
                     Width="800" IsReadOnly="True">
            <FlowDocument>
                <Paragraph FontSize="16">NameConvention - програма для опису конвеншинів іменування об'єктів у базі даних, аналізу імен існуючих об'єктів та перейменування існуюючих об'єктів згідно з конвеншинами.</Paragraph>
            </FlowDocument>
        </RichTextBox>
    </Grid>
</UserControl>
